@using StageSchoolProjectAuto2
@model StageSchoolProjectAuto2.Models.Registratie

@{
    ViewBag.Title = "Contact";
}

<div class="jumbotron">
    <h1>Car-Registration</h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Gegevens</th>
            </tr>
            <tr>
                <td>@Html.ValidationSummary(false, "Vul alles in", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td>Username: </td>
                <td>
                    @Html.TextBoxFor(m => m.Gebruikersnaam)
                </td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>
                    @Html.TextBoxFor(m => m.Wachtwoord)
                </td>
            </tr>
            <tr>
                <td>Email: </td>
                <td>
                    @Html.TextBoxFor(m => m.Email)
                </td>
            </tr>
            <tr>
                <td>Age: </td>
                <td>
                    @Html.TextBoxFor(m => m.Age)
                </td>
            </tr>
            <tr>
                <td><input type="submit" class="btn btn-primary btn-lg" value="Indienen" /></td>
            </tr>
        </table>
    }
</div>